# Configuration file for Snakemake Pipeline
# ALS miRNA Oxidation Analysis Pipeline
#
# COPY THIS FILE TO config.yaml AND UPDATE PATHS TO YOUR DATA

# Project information
project:
  name: "ALS miRNA Oxidation Analysis"
  version: "1.0.0"
  description: "Reproducible pipeline for analyzing G>T oxidation patterns in miRNAs"

# Paths (update these to your data locations)
paths:
  project_root: "/path/to/your/project"
  snakemake_dir: "/path/to/your/project/snakemake_pipeline"
  
  # Input data - UPDATE THESE PATHS
  data:
    # Raw data file (original miRNA_count.Q33.txt format)
    raw: "/path/to/your/data/miRNA_count.Q33.txt"
    
    # Processed data (after split-collapse, for Step 1)
    processed_clean: "/path/to/your/processed_data.csv"
    
    # Original data for Step 1.5 (VAF filtering - needs SNV + total counts)
    step1_original: "/path/to/your/step1_original_data.csv"
  
  # Output directories (relative to snakemake_dir - usually no need to change)
  outputs:
    step1: "outputs/step1"
    step1_5: "outputs/step1_5"
    step2: "outputs/step2"
  
  # Scripts directories (relative to snakemake_dir - usually no need to change)
  scripts:
    step1: "scripts/step1"
    step1_5: "scripts/step1_5"
    step2: "scripts/step2"
    utils: "scripts/utils"
  
  # Viewers directory (relative to snakemake_dir)
  viewers: "viewers"

# Analysis parameters
analysis:
  # VAF filtering threshold (VAFs >= this value are filtered as technical artifacts)
  vaf_filter_threshold: 0.5  # Filter VAFs > 50%
  
  # Statistical parameters
  alpha: 0.05  # Significance threshold
  fdr_method: "BH"  # FDR correction method (Benjamini-Hochberg)
  
  # Visualization colors
  colors:
    gt: "#D62728"  # Red for G>T (oxidation)
    control: "grey60"  # Grey for control
    als: "#D62728"  # Red for ALS
  
  # Figure settings
  figure:
    dpi: 300
    width: 10
    height: 8
    units: "in"

# Resources
resources:
  # Number of threads for parallel execution
  threads: 4
  
  # Memory requirements (in GB)
  memory_gb: 8

# Conda environments (usually no need to change)
conda_envs:
  r_base: "envs/r_base.yaml"
  r_analysis: "envs/r_analysis.yaml"

